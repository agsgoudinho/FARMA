<div
  id="lo-app"
  data-type="teacher"
  data-lo-id="<%= @lo.id %>"
  data-lo="<%= @lo.name %>"
  data-user="<%= current_user.name %>"
  data-page="<%= @page %>"
  data-user-image="<%= attachment_url(
    current_user.avatar,
    :image,
    :fill,
    200,
    200,
    fallback: 'default-avatar.png'
  ) %>"
></div>
